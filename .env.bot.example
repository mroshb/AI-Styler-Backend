# ============================================================================
# Telegram Bot Configuration
# ============================================================================
# Copy this file to .env.bot and fill in your actual values
# cp .env.bot.example .env.bot

TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
BOT_ENV=development

# Backend API Configuration
API_BASE_URL=http://localhost:8080
API_KEY_FOR_BOT=
API_TIMEOUT=30s
API_RETRY_COUNT=3

# Database Configuration
POSTGRES_DSN=host=localhost port=5432 user=postgres password=yourpassword dbname=styler sslmode=disable
# Or use individual settings:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_NAME=styler
DB_SSLMODE=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# Or use individual settings:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
MAX_UPLOAD_SIZE=10MB

# Server Configuration (for webhook mode)
WEBHOOK_URL=
WEBHOOK_PORT=8443
HEALTH_PORT=8081

# Rate Limiting
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_CONVERSIONS=5
RATE_LIMIT_WINDOW=1m

# JWT Secret (should match backend)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
